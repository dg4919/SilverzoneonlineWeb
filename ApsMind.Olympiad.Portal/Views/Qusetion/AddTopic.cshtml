@model ApsMind.Olympiad.Framework.Entity.Topic

@{
    ViewBag.Title = "AddTopic";
}

<h2>AddTopic</h2>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick='$("#myModal").hide()'>×</button>

</div>

@using (Html.BeginForm("AddTopic", "Qusetion", FormMethod.Post, new { enctype = "Multipart/form-data", @id = "frmPara" }))
{
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.TopicName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.TopicName)
            </div>
         
            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.IsActive, new { @checked = "checked" })
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<a class="btn btn-primary" href='/Qusetion/AddTopic/'>Save</a>*@
                    <input type="submit" id="btnparasubmit" value="Save" onchange="SubmitButtion()" class="btn btn-default" />
                </div>
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#btnparasubmit").on("click", function (event) {
            alert("Handler for .submit() called.");
            event.preventDefault();

        });

    </script>
    <script type="text/javascript">
        function SubmitButtion() {
            //  alert('hi');
            var url = "/Qusetion/AddTopic?ParentId=" + ParentId;
            $.ajax({
                url: url,
                type: "Post",
                success: function (Result) {
                    alert(Result);

                }
            });
        }
    </script>
}


