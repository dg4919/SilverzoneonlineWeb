@{
    Layout = null;
}

  @for (int i = 0; i < 5; ++i)
  {
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-1">
            <input type="radio" name="IsAnswer" onclick="setans(@i)" />
        </div>
        <div class="col-md-5">

            <input type="text" name="optionText" class="form-control" />
        </div>
        <div class="col-md-4">

            <input type="file" name="optionImage" />

        </div>
        <div class="col-md-2">
            <img src="~/Images/question_mark1.jpeg" style="width:50px;height:50px;" alt="optinImage" />
        </div>
    </div>
</div>

}